<div class="flex bg-#f4f4f4 w-screen top-0" style="height: calc(100vh - 70px)">

    <div class="overflow-y-scroll h-full w-2/3 p-10">
      <% @bikes.each do |bike| %>
        <%= render 'bike', bike: bike %>
      <% end %>
    </div>

    <div class="w-1/3 h-full"
      id="map"
      style="height: 100%; position: sticky;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

</div>

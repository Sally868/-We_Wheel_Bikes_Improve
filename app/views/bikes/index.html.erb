<p id="notice"><%= notice %></p>
<h1>Bikes</h1>

<form action="<%= bikes_path %>">
  <label for="query">Search:</label><br>
  <input type="text" id="query" name="query" placeholder="Search category"><br>
  <input type="submit" value="Submit">
</form>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <div class="row">
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.name %></td>
        <td><%= bike.address %></td>
        <td><%= bike.description %></td>
        <td><%= bike.price %></td>
        <td><%= bike.category %></td>
        <td><%= link_to 'Show', bike %></td>
      </tr>
    <% end %>
      </div>
  </tbody>
</table>

<br>

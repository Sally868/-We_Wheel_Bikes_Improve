<div class="flex bg-#f4f4f4 w-screen h-screen">

    <div class="overflow-scroll h-full w-2/3 p-10">
      <% @bikes.each do |bike| %>
        <%= render 'bike', bike: bike %>
      <% end %>
    </div>

    <div class="w-1/3 h-screen"
      id="map"
      style="height: 100vh; position: sticky;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

</div>

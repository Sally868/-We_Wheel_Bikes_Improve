<p id="notice"><%= notice %></p>

<h1>list</h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.name %></td>
        <td><%= bike.user_id %></td>
        <td><%= bike.description %></td>
        <td><%= link_to 'Show', bike %></td>
        <% if policy(bike).edit? %>
          <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


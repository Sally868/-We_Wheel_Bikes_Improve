 <div class="w-full flex mb-4 p-2 rounded-2xl hover:bg-gray-100">
  <div class="overflow-hidden rounded-xl flex-shrink-0 h-36 w-36 border-2 border-white shadow">
    <%= cl_image_tag(bike.photo.key, width: 300, height: 300, crop: :fill) %>
  </div>
  <div class="p-2 pl-4 flex flex-col justify-between flex-grow-1">
    <div class="flex justify-between">
      <div>
        <h3 class="text-xs px-2 py-1 bg-red-200 text-red-600 inline rounded-md"><%= bike.category %></h3>
        <h2 class="text-xl mt-1"><%= bike.name %></h2>
      </div>
      <div>
        <h4 class="text-lg font-semibold">$<%= bike.price %> <span class="text-gray-400 text-sm">/day</span></h4>
      </div>
    </div>
    <div class="flex justify-end">
      <%= link_to 'See more', bike_path(bike), class:'py-2 px-4 no-underline bg-white border border-gray-200 shadow-sm text-gray-800 hover:shadow-lg transition-shadow duration-300 rounded-md' %>
    </div>
  </div>
 </div>
